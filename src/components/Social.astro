---
const { platform, username } = Astro.props;
let url = "";
if (platform == "bluesky") {
  url = `https://bsky.app/profile/${username}.bsky.social`;
} else {
  url = `https://www.${platform}.com/${username}`;
}
---

<a href={url}>{platform}</a>
<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
</style>
